<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_off_white_base"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cart_footer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOUR ORDER SUMMARY"
                android:gravity="center"
                android:layout_marginTop="@dimen/screen_top_margin"
                android:textSize="14sp"
                android:textColor="@color/_off_black_base"
                android:fontFamily="@font/poppins_extrabold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:focusable="false"
                android:id="@+id/cart_items_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/cart_item_card"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cart_payment_summary"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content"
                android:background="@drawable/payment_summary_background"
                android:padding="8dp">
                <TextView
                    android:id="@+id/payment_summary_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PAYMENT"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/payment_summary_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Subtotal"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/payment_summary_title"
                    android:fontFamily="@font/poppins_semibold"/>
                <TextView
                    android:id="@+id/payment_summary_subtotal_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="EGP"
                    android:layout_marginRight="4dp"
                    app:layout_constraintRight_toLeftOf="@id/payment_summary_subtotal_value"
                    app:layout_constraintTop_toTopOf="@id/payment_summary_subtotal_value"
                    app:layout_constraintBottom_toBottomOf="@id/payment_summary_subtotal_value"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/payment_summary_subtotal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10000.00"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/payment_summary_subtotal"
                    app:layout_constraintBottom_toBottomOf="@id/payment_summary_subtotal"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/payment_summary_delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Delivery Fee"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/payment_summary_subtotal"/>
                <TextView
                    android:id="@+id/payment_summary_delivery_fee_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="EGP"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/_off_black_base"
                    app:layout_constraintRight_toLeftOf="@id/payment_summary_delivery_fee_value"
                    app:layout_constraintTop_toTopOf="@id/payment_summary_delivery_fee_value"
                    app:layout_constraintBottom_toBottomOf="@id/payment_summary_delivery_fee_value"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/payment_summary_delivery_fee_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="16.99"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/payment_summary_delivery_fee"
                    app:layout_constraintBottom_toBottomOf="@id/payment_summary_delivery_fee"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/payment_summary_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Total"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/payment_summary_delivery_fee" />
                <TextView
                    android:id="@+id/payment_summary_total_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="EGP"
                    android:layout_marginRight="4dp"
                    app:layout_constraintRight_toLeftOf="@id/payment_summary_total_value"
                    app:layout_constraintTop_toTopOf="@id/payment_summary_total_value"
                    app:layout_constraintBottom_toBottomOf="@id/payment_summary_total_value"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/payment_summary_total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1016.99"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/payment_summary_total"
                    app:layout_constraintBottom_toBottomOf="@id/payment_summary_total"
                    android:textColor="@color/_off_black_base"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_bold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/cart_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add More"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginRight="12dp"
            android:background="@color/_primary_base"
            android:textColor="@color/_off_black_base"
            android:fontFamily="@font/poppins_extrabold"
            android:paddingVertical="12dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add More"
            android:background="@color/_secondary_base"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/_off_black_base"
            android:fontFamily="@font/poppins_extrabold"
            android:paddingVertical="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>