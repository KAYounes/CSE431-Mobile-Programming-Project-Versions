<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="20dp"
    android:elevation="@dimen/card_restaurant_elevation"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/card_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/_primary_base"
        android:padding="2dp">
        <TextView
            android:id="@+id/menu_item_choice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beef Burger"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textColor="@color/_off_black_base"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="16sp"/>
        <LinearLayout
            android:id="@+id/menu_item_choices_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:background="@drawable/rect_round_radius_2"
            android:padding="12dp"
            android:backgroundTint="@color/_off_white_base"
            android:paddingHorizontal="4dp"
            android:divider="@drawable/divider_12dp"
            android:showDividers="middle"
            android:paddingBottom="4dp">
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>