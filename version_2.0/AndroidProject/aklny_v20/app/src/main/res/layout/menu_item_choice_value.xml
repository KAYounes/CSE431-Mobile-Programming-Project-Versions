<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/choice_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="12sp"
        android:textColor="@color/_off_black_base"
        android:fontFamily="@font/poppins_bold"/>
    <TextView
        android:id="@+id/choice_fee_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+EGP"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@id/choice_fee"
        app:layout_constraintTop_toTopOf="@id/choice_fee"
        app:layout_constraintBottom_toBottomOf="@id/choice_fee"
        android:textColor="@color/_off_white_shade_55"
        android:layout_marginRight="4dp"

        android:fontFamily="@font/poppins_semibold"/>
    <TextView
        app:layout_constraintRight_toLeftOf="@+id/choice_value_selector"
        app:layout_constraintTop_toTopOf="@id/choice_value_selector"
        app:layout_constraintBottom_toBottomOf="@id/choice_value_selector"
        android:id="@+id/choice_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.00"
        android:textSize="10sp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/_off_white_shade_55"
        android:fontFamily="@font/poppins_semibold"/>
    <ImageView
        android:id="@+id/choice_value_selector"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/choice_value"
        app:layout_constraintBottom_toBottomOf="@id/choice_value"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_radius_10"/>
</androidx.constraintlayout.widget.ConstraintLayout>