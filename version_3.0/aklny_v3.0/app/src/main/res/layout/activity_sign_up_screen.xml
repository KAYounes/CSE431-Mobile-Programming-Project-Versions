<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_primary_base"
    android:orientation="vertical"
    tools:context=".SignUpScreenActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/statusBar_escape_margin"
        android:fontFamily="@font/shrikhand_regular"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:text="WELCOME"
        android:textColor="@color/_secondary_base"
        android:textSize="32sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/sign_up_screen_bottom_group_bg"
        android:paddingHorizontal="30dp"
        android:paddingVertical="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_firstName"
            style="@style/textInputLayoutYellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:hint="FIRST NAME"
            app:helperText=""
            app:layout_constraintBottom_toTopOf="@id/textInput_phoneNumber"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textInput_lastName"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEdit_firstName"
                style="@style/textInputEditLayoutYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_lastName"
            style="@style/textInputLayoutYellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="LAST NAME"
            app:helperText=""
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/textInput_firstName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/textInput_firstName">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEdit_lastName"
                style="@style/textInputEditLayoutYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_phoneNumber"
            style="@style/textInputLayoutYellow"
            android:layout_width="match_parent"
            app:prefixText="+20 "
            android:layout_height="wrap_content"
            android:hint="PHONE NUMBER"
            app:prefixTextAppearance="@style/prefixTextAppearance"
            app:helperText=""
            app:layout_constraintBottom_toTopOf="@id/textInput_email"
            app:layout_constraintTop_toBottomOf="@id/textInput_firstName"
            app:startIconDrawable="@drawable/icon_call_24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEdit_phoneNumber"
                style="@style/textInputEditLayoutYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_email"
            style="@style/textInputLayoutYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            app:helperText=""
            app:layout_constraintBottom_toTopOf="@id/textInput_password"
            app:layout_constraintTop_toBottomOf="@id/textInput_phoneNumber"
            app:startIconDrawable="@drawable/icon_profile_24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEdit_email"
                style="@style/textInputEditLayoutYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_password"
            style="@style/textInputLayoutYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            app:helperText=""
            app:layout_constraintBottom_toTopOf="@+id/btn_signUp"
            app:layout_constraintTop_toBottomOf="@id/textInput_email"
            app:passwordToggleDrawable="@drawable/password_visibility_toggle_icon_selector"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/icon_key_24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEdit_password"
                style="@style/textInputEditLayoutYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/_off_black_base"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="12dp"
            android:text="SIGN UP"
            android:layout_marginBottom="32dp"
            android:textColor="@color/_secondary_base"
            android:textSize="20sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_alreadyHaveAnAccount"
            app:layout_constraintTop_toBottomOf="@id/textInput_password"/>

        <Button
            android:id="@+id/btn_alreadyHaveAnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/_secondary_tint_85"
            android:fontFamily="@font/poppins_semibold"
            android:paddingVertical="12dp"
            android:text="Already have an account?"
            android:textAllCaps="false"
            android:textColor="@color/_secondary_base"
            android:textSize="10sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>