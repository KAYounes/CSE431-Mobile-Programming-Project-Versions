<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFECD1"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="106dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_thumbnail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:elevation="3dp"
            android:padding="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_logo_placeholder_100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/imageRoundCorners" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_body"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Texas Buffalo Burger"
                android:textColor="@color/_off_black_base"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/item_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Beef, Chicken, Sandwiches,  Burgers, Fresh, Grilled, Fried, Crunchy, Crepe, Waffles"
                android:textColor="#FBAB57"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@id/btn_decrement_count"
                app:layout_constraintTop_toBottomOf="@id/item_name"/>

            <ImageView
                android:id="@+id/btn_decrement_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/icon_minus_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/item_counter"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/word_spacing"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="20"
                android:textColor="@color/_off_black_base"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/btn_decrement_count"
                app:layout_constraintLeft_toRightOf="@id/btn_decrement_count"
                app:layout_constraintRight_toLeftOf="@id/btn_increment_count"
                app:layout_constraintTop_toTopOf="@id/btn_decrement_count"/>

            <ImageView
                android:id="@+id/btn_increment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/word_spacing"
                android:padding="8dp"
                android:src="@drawable/icon_add_24dp"
                app:layout_constraintBottom_toBottomOf="@id/btn_decrement_count"
                app:layout_constraintLeft_toRightOf="@id/item_counter"
                app:layout_constraintTop_toTopOf="@id/btn_decrement_count"/>

            <TextView
                android:id="@+id/btn_remove_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/word_spacing"
                android:background="@drawable/bg_cart_count"
                android:backgroundTint="@color/_secondary_base"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:text="Remove"
                android:textColor="@color/_off_black_base"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/btn_decrement_count"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_decrement_count"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEC674"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp">
        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="1"
            android:textColor="@color/_off_black_base"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/text_X_egp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/word_spacing"
            android:fontFamily="@font/poppins_medium"
            android:text="X EGP"
            android:textColor="@color/_off_black_base"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/item_count"
            app:layout_constraintRight_toLeftOf="@id/item_price"
            app:layout_constraintTop_toTopOf="@id/item_count"/>
        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/word_spacing"
            android:fontFamily="@font/poppins_medium"
            android:text="15.00"
            android:textColor="@color/_off_black_base"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/text_X_egp"
            app:layout_constraintTop_toTopOf="@id/item_count"/>
        <TextView
            android:id="@+id/text_equal_egp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/word_spacing"
            android:fontFamily="@font/poppins_semibold"
            android:text="= EGP"
            android:textColor="@color/_off_black_base"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@id/item_subtotal"
            app:layout_constraintTop_toTopOf="@id/item_subtotal"/>
        <TextView
            android:id="@+id/item_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="15.00"
            android:textColor="@color/_off_black_base"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_count"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>