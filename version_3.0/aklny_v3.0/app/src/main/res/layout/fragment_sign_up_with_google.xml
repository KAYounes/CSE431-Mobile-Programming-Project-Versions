    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_sign_up_screen_group"
        android:paddingHorizontal="30dp"
        android:paddingTop="40dp"
        android:paddingBottom="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_firstName"
            style="@style/textInputLayoutYellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:hint="FIRST NAME"
            app:layout_constraintBottom_toTopOf="@id/textInput_phoneNumber"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textInput_lastName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEdit_firstName"
                style="@style/textInputEditLayoutYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:inputType="textCapWords"
                android:maxLength="15"
                android:text="John" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_lastName"
            style="@style/textInputLayoutYellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="LAST NAME"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/textInput_firstName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/textInput_firstName">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEdit_lastName"
                style="@style/textInputEditLayoutYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:inputType="textCapWords"
                android:maxLength="15"
                android:text="Smith" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_phoneNumber"
            style="@style/textInputLayoutYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="PHONE NUMBER"
            app:layout_constraintTop_toBottomOf="@id/textInput_firstName"
            app:layout_constraintVertical_chainStyle="packed"
            app:prefixText="+20 "
            app:prefixTextAppearance="@style/prefixTextAppearance"
            app:startIconDrawable="@drawable/icon_call_24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEdit_phoneNumber"
                style="@style/textInputEditLayoutYellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="10"
                android:text="1111111111" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_helpMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:paddingVertical="12dp"
            android:text="All fields are required."
            android:textColor="@color/_secondary_base"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/btn_signUp_withGoogle"
            app:layout_constraintVertical_weight="1"/>

        <Button
            android:id="@+id/btn_signUp_withGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/_off_black_base"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="12dp"
            android:text="SIGN UP WITH GOOGLE ACCOUNT"
            android:textColor="@color/_secondary_base"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_alreadyHaveAnAccount" />

        <!--<com.google.android.gms.common.SignInButton-->
        <!--    android:id="@+id/btn_googleSignUp"-->
        <!--    android:layout_width="wrap_content"-->
        <!--    android:layout_height="wrap_content"-->
        <!--    app:layout_constraintBottom_toTopOf="@id/btn_alreadyHaveAnAccount"-->
        <!--    app:layout_constraintLeft_toLeftOf="parent"-->
        <!--    app:layout_constraintRight_toRightOf="parent"-->
        <!--    app:layout_constraintTop_toBottomOf="@id/btn_passwordEmailSignUp"/>-->

        <Button
            android:id="@+id/btn_alreadyHaveAnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/_secondary_tint_85"
            android:fontFamily="@font/poppins_semibold"
            android:paddingVertical="12dp"
            android:text="Already have an account?"
            android:textAllCaps="false"
            android:textColor="@color/_secondary_base"
            android:textSize="10sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>