<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_primary_base"
    android:orientation="vertical"
    tools:context=".ui_controllers.c_signUpScreen.SignUpScreenActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/statusBar_escape_margin"
        android:layout_weight="1"
        android:fontFamily="@font/shrikhand_regular"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        android:text="How Would You Like To Sign Up"
        android:textColor="@color/_secondary_base"
        android:textSize="24sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_screen_bottom_group_bg"
        android:paddingHorizontal="30dp"
        android:paddingVertical="16dp">

        <Button
            android:id="@+id/btn_passwordEmailSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/_off_black_base"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="12dp"
            android:text="Password and Email"
            android:textColor="@color/_secondary_base"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@id/text_or"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="or"
            android:textColor="@color/_off_black_base"
            app:layout_constraintBottom_toTopOf="@id/btn_googleSignUp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_passwordEmailSignUp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_googleSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@id/btn_alreadyHaveAnAccount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_or"/>

        <Button
            android:id="@+id/btn_alreadyHaveAnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/_secondary_tint_85"
            android:fontFamily="@font/poppins_semibold"
            android:paddingVertical="12dp"
            android:text="Already have an account?"
            android:textAllCaps="false"
            android:textColor="@color/_secondary_base"
            android:textSize="10sp"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>