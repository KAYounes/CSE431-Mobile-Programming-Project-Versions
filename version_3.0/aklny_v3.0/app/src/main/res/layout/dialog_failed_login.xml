<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_round_no_outline"
        android:paddingHorizontal="32dp"
        android:paddingVertical="20dp">
        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icons_forbidden_24dp"
            app:layout_constraintBottom_toTopOf="@id/dialog_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/_secondary_base" />

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Login Failed"
            android:textColor="@color/_off_black_base"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/dialog_button_dismiss"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_icon"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_button_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/dialog_button_dismiss"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="64dp"
            android:text="Close"
            android:textColor="@color/_off_black_base"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>