<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFECD1"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/restaurantLogo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:elevation="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_logo_placeholder_100dp"
            app:layout_constraintBottom_toBottomOf="@id/card_body"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_body"
            app:shapeAppearanceOverlay="@style/imageRoundCorners" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/restaurantLogo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="Texas Buffalo Burger"
                android:textColor="@color/_off_black_base"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/orderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:minLines="1"
                android:text="12/30/2022 - 12:12"
                android:textColor="@color/_off_black_base"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/orderTotal"
                app:layout_constraintTop_toBottomOf="@id/restaurantName"/>
            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="status: "
                android:textColor="@color/_secondary_base"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/orderTotal"
                app:layout_constraintStart_toStartOf="@+id/orderDate"
                app:layout_constraintTop_toTopOf="@+id/orderTotal" />
            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="not confirmed"
                android:textColor="@color/_off_black_base"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/orderTotal"
                app:layout_constraintStart_toEndOf="@+id/text_status"
                app:layout_constraintTop_toTopOf="@+id/orderTotal" />
            <TextView
                android:id="@+id/text_egp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/word_spacing"
                android:fontFamily="@font/poppins_medium"
                android:text="EGP"
                android:textColor="@color/_off_black_base"
                android:textSize="10sp"
                app:layout_constraintBaseline_toBaselineOf="@id/orderTotal"
                app:layout_constraintBottom_toBottomOf="@id/orderTotal"
                app:layout_constraintRight_toLeftOf="@id/orderTotal"
                app:layout_constraintTop_toTopOf="@id/orderTotal"/>
            <TextView
                android:id="@+id/orderTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="150.00"
                android:textColor="@color/_off_black_base"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/currentOrderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/_secondary_base"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="@dimen/word_spacing"
            android:text="LIVE"
            android:textColor="@color/_off_black_base"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>