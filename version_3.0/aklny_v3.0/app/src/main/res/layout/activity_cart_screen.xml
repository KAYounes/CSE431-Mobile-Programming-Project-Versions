<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E2"
    tools:context=".ui.s7_cart_screen.Activity_CartScreen">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_items"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/statusBar_escape_margin"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/group_action"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/rv_item_cart_item_card"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/group_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#0A000000"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#FFF3E2"
            android:orientation="horizontal"
            android:padding="16dp">
            <TextView
                android:id="@+id/btn_add_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_add_more"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="ADD MORE"
                android:textColor="@color/_off_black_base"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/btn_checkout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_checkout"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="CHECKOUT"
                android:textColor="@color/_off_black_base"
                android:textSize="12sp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>