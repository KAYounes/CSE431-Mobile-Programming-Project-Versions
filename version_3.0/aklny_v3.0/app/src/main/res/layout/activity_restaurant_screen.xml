<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E2"
    tools:context=".ui.s6_restaurant_screen.Activity_RestaurantScreen">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menus_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/cart"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/rv_item_menu"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_add_to_cart_btn"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/icon_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_shopping_cart_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_cart"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/text_cart"
                app:layout_constraintTop_toTopOf="@+id/text_cart" />

            <TextView
                android:id="@+id/text_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/word_spacing"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Cart"
                android:textColor="@color/_off_black_base"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/icon_cart"
                app:layout_constraintStart_toEndOf="@+id/icon_cart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cart_item_count"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_cart_count"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/_off_black_base"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/cart_subtotal"
                app:layout_constraintRight_toLeftOf="@id/text_egp_2"
                app:layout_constraintTop_toTopOf="@id/cart_subtotal"/>

            <TextView
                android:id="@+id/text_egp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/word_spacing"
                android:fontFamily="@font/poppins_extrabold"
                android:text="EGP"
                android:textColor="@color/_off_black_base"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/cart_subtotal"
                app:layout_constraintRight_toLeftOf="@id/cart_subtotal"
                app:layout_constraintTop_toTopOf="@id/cart_subtotal"/>

            <TextView
                android:id="@+id/cart_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_extrabold"
                android:text="00.00"
                android:textColor="@color/_off_black_base"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
