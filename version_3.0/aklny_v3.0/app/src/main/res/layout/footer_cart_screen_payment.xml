<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/_primary_base"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <TextView
            android:id="@+id/text_payment_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Payment Summary"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Subtotal"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_payment_summary" />

        <TextView
            android:id="@+id/text_delviery_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Delivery Fees"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_subtotal" />

        <TextView
            android:id="@+id/text_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Total Amount"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_delviery_fee" />

        <TextView
            android:id="@+id/text_egp_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/word_spacing"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="EGP"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cart_subtotal"
            app:layout_constraintRight_toLeftOf="@+id/cart_subtotal"
            app:layout_constraintTop_toTopOf="@+id/cart_subtotal" />

        <TextView
            android:id="@+id/text_egp_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/word_spacing"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="EGP"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/deliver_fee"
            app:layout_constraintRight_toLeftOf="@+id/deliver_fee"
            app:layout_constraintTop_toTopOf="@+id/deliver_fee" />

        <TextView
            android:id="@+id/text_egp_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/word_spacing"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="EGP"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/total"
            app:layout_constraintRight_toLeftOf="@+id/total"
            app:layout_constraintTop_toTopOf="@+id/total" />

        <TextView
            android:id="@+id/cart_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="100.00"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_subtotal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_subtotal" />

        <TextView
            android:id="@+id/deliver_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="100.00"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_delviery_fee"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_delviery_fee" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="100.00"
            android:textColor="@color/_off_black_base"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_total_amount"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_total_amount" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>