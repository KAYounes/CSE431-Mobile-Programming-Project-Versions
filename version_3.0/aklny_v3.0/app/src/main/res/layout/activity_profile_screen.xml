<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E2"
    android:padding="16dp"
    tools:context=".ui.Activity_ProfileScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/statusBar_escape_margin"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Your Profile"
        android:textColor="@color/_off_black_base"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profileImage"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:shapeAppearanceOverlay="@style/imageCircular"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#FFECD1"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_thumbnail_placeholder" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_firstName"
        style="@style/textInputLayoutYellow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        android:hint="FIRST NAME"
        app:helperText=""
        app:layout_constraintRight_toLeftOf="@+id/textInput_lastName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_profileImage"
        app:layout_editor_absoluteY="300dp"
        app:startIconDrawable="@drawable/icon_personalcard">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEdit_firstName"
            style="@style/textInputEditLayoutYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_lastName"
        style="@style/textInputLayoutYellow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="LAST NAME"
        app:helperText=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textInput_firstName"
        app:layout_constraintTop_toTopOf="@+id/textInput_firstName"
        app:layout_editor_absoluteY="300dp"
        app:startIconDrawable="@drawable/icon_personalcard">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEdit_lastName"
            style="@style/textInputEditLayoutYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_phoneNumber"
        style="@style/textInputLayoutYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="PHONE NUMBER"
        app:helperText=""
        app:layout_constraintTop_toBottomOf="@+id/textInput_lastName"
        app:startIconDrawable="@drawable/icon_call_calling">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEdit_phoneNumber"
            style="@style/textInputEditLayoutYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput_photoURL"
        style="@style/textInputLayoutYellow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Photo URL"
        app:helperText=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/card_profileImage"
        app:layout_constraintBottom_toBottomOf="@+id/card_profileImage"
        app:layout_constraintTop_toTopOf="@+id/card_profileImage"
        android:layout_marginLeft="16dp"
        app:startIconDrawable="@drawable/icon_photo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEdit_photoURL"
            style="@style/textInputEditLayoutYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_gateRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#FFECD1"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/textInput_phoneNumber"
        app:layout_editor_absoluteY="500dp"
        tools:layout_editor_absoluteX="16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Default Delivery Gate"
                android:textColor="@color/_off_black_base"
                android:textSize="12sp" />

            <RadioGroup
                android:id="@+id/gateRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:addStatesFromChildren="true"
                android:clickable="true"
                android:focusable="true">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/gate3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/selector_radio_buttons"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="true"
                    android:contentDescription="Content Description"
                    android:focusable="true"
                    android:fontFamily="@font/poppins_bold"
                    android:hapticFeedbackEnabled="true"
                    android:paddingHorizontal="8dp"
                    android:text="Gate 3"
                    android:textColor="@drawable/selector_radio_button_text"
                    android:textSize="12sp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/gate4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_radio_buttons"
                    android:button="@null"
                    android:checked="false"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingHorizontal="8dp"
                    android:text="Gate 4"
                    android:textColor="@drawable/selector_radio_button_text"
                    android:textSize="12sp" />
            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_saveChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_confirm_order"
        android:fontFamily="@font/poppins_semibold"
        android:paddingHorizontal="24dp"
        android:text="SAVE CHANGES"
        android:textColor="@color/_off_black_base"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>