<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECD1"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="8dp"
    android:paddingVertical="@dimen/statusBar_escape_margin"
    tools:context=".ui.FragmentSideBar">

    <ImageView
        android:id="@+id/btn_close_sidebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:src="@drawable/icon_close_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/_secondary_base" />

    <TextView
        android:id="@+id/menu_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_sidebar_menu"
        android:focusable="true"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Profile"
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_close_sidebar"/>

    <TextView
        android:id="@+id/menu_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_sidebar_menu"
        android:focusable="true"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Orders"
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/menu_profile"/>

    <TextView
        android:id="@+id/text_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_sidebar_menu"
        android:focusable="true"
        android:fontFamily="@font/poppins_extrabold"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:text="Admin"
        android:textColor="@color/_secondary_base"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_orders" />

    <TextView
        android:id="@+id/menu_view_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_sidebar_menu"
        android:focusable="true"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="View Users"
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_admin" />

    <TextView
        android:id="@+id/menu_add_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_sidebar_menu"
        android:focusable="true"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Add Restaurant"
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/menu_view_users"/>

    <TextView
        android:id="@+id/menu_add_dish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_sidebar_menu"
        android:focusable="true"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Add Dish"
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/menu_add_restaurant"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_sidebar_menu"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="Logout"
            android:textColor="@color/_secondary_base"
            android:textSize="12dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/_secondary_base"
            android:src="@drawable/icon_logout_16dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>