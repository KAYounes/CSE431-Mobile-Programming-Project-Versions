<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Burger Tower"
        android:textColor="@color/_off_black_base"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Quantity:  "
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemName" />

    <TextView
        android:id="@+id/itemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="1"
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_quantity"
        app:layout_constraintStart_toEndOf="@+id/text_quantity"
        app:layout_constraintTop_toTopOf="@+id/text_quantity" />

    <TextView
        android:id="@+id/text_egp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="EGP "
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_quantity"
        app:layout_constraintEnd_toStartOf="@+id/total" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="100.00"
        android:textColor="@color/_off_black_base"
        android:textSize="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_quantity"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>