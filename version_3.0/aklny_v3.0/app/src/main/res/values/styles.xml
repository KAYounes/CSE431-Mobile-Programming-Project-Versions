<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="imageCircular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style
        name="imageRoundCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style
        name="imageRoundTopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/_secondary_base</item>
        <item name="colorControlActivated">@color/_primary_base</item>
    </style>
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/icon_star_8dp</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/selector_rating_bar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>
    <!--<style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">-->
    <!--    <item name="android:textColor">#F00</item>-->
    <!--</style>-->

    <style name="helperTextColor" parent="android:TextAppearance">
        <item name="android:textColor"> #0F0</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="OutlinedRoundedBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!--<item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>-->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3dp</item>
    </style>

    <style name="OutlinedRoundedPill" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded</item>-->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="textInputLayoutYellow">
        <item name="android:textColor">@color/_off_black_base</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="startIconTint">@color/_off_black_base</item>
        <item name="passwordToggleTint">@color/_off_black_base</item>
        <item name="android:textColorHint"> @color/input_field_hintColor </item>
        <item name="boxBackgroundColor"> @color/_primary_base</item>
        <item name="boxStrokeColor"> @color/_secondary_base</item>
        <item name="boxStrokeWidth"> 0dp</item>
        <item name="boxStrokeWidthFocused"> 5dp</item>
        <item name="helperTextTextAppearance"> @style/helperTextColor</item>
        <item name="helperTextTextColor"> @color/_off_white_base</item>
        <item name="helperText">  </item>
        <item name="hintTextColor"> @color/_secondary_base</item>
        <item name="shapeAppearanceOverlay"> @style/OutlinedRoundedBox</item>
        <item name="prefixTextAppearance">@style/prefixTextAppearance</item>
        <item name="prefixTextColor">@color/_off_black_base</item>
    </style>

    <!--<style name="pad" parent="Widget.MaterialComponents.TextInputLayout.fi"-->
    <style name="textInputLayoutSearch" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/_off_black_base</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="startIconTint">@color/_off_black_base</item>
        <item name="android:textColorHint"> @color/input_field_hintColor </item>
        <item name="boxBackgroundColor"> @color/_primary_base</item>
        <item name="boxStrokeColor"> @color/_secondary_base</item>
        <item name="boxStrokeWidth"> 0dp</item>
        <item name="boxStrokeWidthFocused"> 2dp</item>
        <!--<item name="helperTextTextAppearance"> @style/helperTextColor</item>-->
        <!--<item name="helperTextTextColor"> @color/_off_white_base</item>-->
        <!--<item name="helperText">  </item>-->
        <!--<item name="hintTextColor"> @color/_secondary_base</item>-->
        <item name="shapeAppearanceOverlay"> @style/OutlinedRoundedPill</item>
    </style>

    <style name="prefixTextAppearance">
        <item name="android:textColor">@color/_off_black_base</item>
        <item name="textFillColor">@color/_off_black_base</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textInputEditLayoutYellow">
        <item name="android:textColor">@color/_off_black_base</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="scrolBar">
        <item name="android:scrollbarSize">10dp</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_custom</item>
    </style>
</resources>